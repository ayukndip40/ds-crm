      <script>
         document.getElementById('login-form').addEventListener('submit', async function(event) {
  console.log('Login form submission event triggered');
  event.preventDefault();
  console.log('Default form submission prevented');

  const email = document.querySelector('input[name="email"]').value;
  console.log('Email retrieved:', email);
  const password = document.querySelector('input[name="password"]').value;
  console.log('Password retrieved:', password);

  console.log('Submitting login form with:', { email, password });

  try {
    const response = await fetch('/auth/login', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ email, password })
    });

    console.log('Response received from /auth/login');
    console.log('Response status:', response.status);
    const data = await response.json();
    console.log('Response JSON parsed:', data);

    if (data.success) {
      console.log('Login successful');

      // Save the tokens in local storage with correct keys
      localStorage.setItem('accessToken', data.accessToken);
      localStorage.setItem('refreshToken', data.refreshToken); 
      console.log('Tokens saved to local storage:', {
        accessToken: data.accessToken,
        refreshToken: data.refreshToken
      });

      // Optionally save user profile data to local storage
      localStorage.setItem('userProfile', JSON.stringify(data.profile));
      console.log('User profile saved to local storage:', data.profile);

      // Redirect to the dashboard
      console.log('Redirecting to dashboard');
      window.location.href = '/dashboard';
    } else {
      // Handle login failure
      console.error('Login failed:', data.message);
      // Optionally, display an error message to the user here
      alert(`Login failed: ${data.message}`);
    }
  } catch (err) {
    console.error('Error during login:', err);
    // Optionally, handle the error more gracefully, like displaying an error message
    alert(`Error during login: ${err.message}`);
  }
});

      </script>
